<div class="container-fluid">
  {% if include.header %}
    <div class="section-hero-text">
      <div class="row">
        <p>{{ include.header }}</p>
      </div>
    </div>
  {% endif %}
  {% if include.title %}
    <div class="row">
      <p class="new-about-title col-12">
        {{ include.title }}
      </p>
    </div>
  {% endif %}
  {% assign data = site.data['new-about'].newAbout %}
  <div class="responsive-content grid-columns grid-columns-px-15">
    <div class="row ">
      {% for item in data limit: 3 %}
        <div class="col-12 col-sm-6 col-md-4 grid-item">
          <div class="img-container">
            {% if forloop.index0 == 0 %}
              <a href="{{ item.url }}"><img src="{{ item.image }}" class="img-fluid" alt="Living Earth logo"></a>
            {% elsif forloop.index0 == 1 %}
              <a href="{{ item.url }}"><img src="/assets/img/tools2.jpg" class="img-fluid" alt="Living Earth logo"></a>
            {% elsif forloop.index0 == 2 %}
              <a href="{{ item.url }}"><img src="/assets/img/tools3.jpg" class="img-fluid" alt="Living Earth logo"></a>
            {% endif %}
          </div>
          <div class="grid-item-content">
            <a class="grid-item-title" href="{{ item.url }}">{{ item.title }}</a>
            <p class="grid-item-subtitle">{{ item.subtitle }}</p>
            <p class="grid-item-desc">{{ item.content }}</p>
            <p class="grid-item-tagline">{{ item.tagline }}</p>
          </div>
        </div>
      {% endfor %}
      {% for item in data offset: 3 limit: 3 %}
        <div class="col-12 col-sm-6 col-md-4 grid-item">
          <div class="img-container">
            <a href="{{ item.url }}"><img src="{{ item.image }}" class="img-fluid" alt="Living Earth logo"></a>
          </div>
          <div class="grid-item-content">
            <a class="grid-item-title" href="{{ item.url }}">{{ item.title }}</a>
            <p class="grid-item-subtitle">{{ item.subtitle }}</p>
            <p class="grid-item-desc">{{ item.content }}</p>
            <p class="grid-item-tagline">{{ item.tagline }}</p>
          </div>
        </div>
      {% endfor %}
      {% for item in data offset: 6 %}
        <div class="col-12 col-sm-6 col-md-4 grid-item">
          <div class="img-container">
            <a href="{{ item.url }}"><img src="{{ item.image }}" class="img-fluid" alt="Living Earth logo"></a>
          </div>
          <div class="grid-item-content">
            <a class="grid-item-title" href="{{ item.url }}">{{ item.title }}</a>
            <p class="grid-item-subtitle">{{ item.subtitle }}</p>
            <p class="grid-item-desc">{{ item.content }}</p>
            <p class="grid-item-tagline">{{ item.tagline }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="row responsive-content-sm">
    {% for item in site.data.new-about.newAbout %}
      <div class="col-md-12 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="{{ item.image }}" alt="{{ item.title }}">
          <div class="card-body">
            <h4 class="card-title">{{ item.title }}</h4>
            <h5>{{ item.subtitle }}</h5>
            <p class="card-text">{{ item.content }}</p>
            <p class="card-text"><small class="text-muted">{{ item.tagline }}</small></p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

</div>
